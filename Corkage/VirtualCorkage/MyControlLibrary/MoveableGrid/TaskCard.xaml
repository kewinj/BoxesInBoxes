<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="MyControlLibrary.TaskCard"
	mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400" Loaded="UserControlLoaded">
	<UserControl.Effect>
		<DropShadowEffect ShadowDepth="2" Direction="270" Opacity="0.8" BlurRadius="6"/>
	</UserControl.Effect>
	<Grid x:Name="LayoutRoot" Margin="5"  >
		<Grid.Background>
			<ImageBrush ImageSource="/MyControlLibrary;component/Resources/5x3.png" />
		</Grid.Background>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock x:Name ="taskTextBlock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="10"  TextWrapping="Wrap" Text="As a user I want to click here to add some more text..." Foreground="Black"    />
		<TextBox   x:Name ="taskTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="10"  TextWrapping="Wrap"  Visibility="Collapsed" Background="White" Foreground="Black"  />
	</Grid>
</UserControl>
