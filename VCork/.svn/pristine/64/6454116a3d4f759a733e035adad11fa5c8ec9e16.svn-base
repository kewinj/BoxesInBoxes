<UserControl x:Class="MyControlLibrary.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:panels="clr-namespace:MyControlLibrary"
    Width="300" Height="340">
    <Grid x:Name="LayoutRoot" Background="Black" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <panels:RearrangableGridCanvas
            Grid.Row="0"
            Width="300" Height="300" 
            x:Name="RearrangableCanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <Button x:Name="CancelButton" Grid.Row="1"
                Click="CancelButton_Click" Content="Revert" />        
        
        <TextBlock Grid.Row="2" HorizontalAlignment="Right" Foreground="White">SmartyPantsCoding.com</TextBlock>
    </Grid>
</UserControl>
