<UserControl x:Class="VCork.StoryCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="137" d:DesignWidth="245">
    
    <Grid x:Name="LayoutRoot" >
    	<Grid.Effect>
    		<DropShadowEffect Opacity="0.75" BlurRadius="2" ShadowDepth="2"/>
    	</Grid.Effect>
    	<Grid.Background>
    		<ImageBrush Stretch="Fill" ImageSource="Resources/StoryCards/5x3.png"/>
    	</Grid.Background>
        <TextBlock HorizontalAlignment="Stretch" Name="storyText" VerticalAlignment="Stretch" TextWrapping="Wrap" FontSize="10" Margin="15,15,15,15" Padding="0"  />
    </Grid>
</UserControl>
